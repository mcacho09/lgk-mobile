<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="app.logistikappbeta.com.logistikapp.Fragments.StockTabs.AdmGeneralStockFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
      xmlns:cv="http://schemas.android.com/apk/res-auto"
      android:id="@+id/cvNoData"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      cv:cardBackgroundColor="@color/colorBlue"
      cv:cardCornerRadius="10dp"
      cv:cardElevation="3dp"
      cv:cardUseCompatPadding="true"
      cv:contentPadding="10dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_error"
          android:tint="@android:color/white"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No cuentas con un almacÃ©n registrado"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="@android:color/white"/>

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
      android:id="@+id/lay_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/tvCode"
        style="@style/subtitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <TextView
        android:id="@+id/tvNoProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <TextView
        android:id="@+id/tvCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <TextView
        android:id="@+id/tvSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/darker_gray"/>

      <RelativeLayout
        android:id="@+id/lay_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <LinearLayout
          android:id="@+id/lay_min_max"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="left"
          android:layout_alignParentLeft="true"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/tvMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_yellow"
            android:text="MIN"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

          <TextView
            android:id="@+id/tvMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_green"
            android:text="MAX"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/white"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

        </LinearLayout>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_alignParentRight="true">

          <TextView
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_purple"
            android:text="PIEZAS"
            android:textColor="@android:color/white"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

          <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_purple"
            android:text="CAJAS"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/white"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

          <TextView
            android:id="@+id/tvPcs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:text="TOTAL"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/white"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

        </LinearLayout>


      </RelativeLayout>

      <TextView
        style="@style/subtitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Listado de productos"
        android:textColor="@color/colorBlue"/>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@id/rvList"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

    </LinearLayout>

  </LinearLayout>

</FrameLayout>
