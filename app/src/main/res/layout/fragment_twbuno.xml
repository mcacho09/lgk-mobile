<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Fragments.TravelWayBillTabs.TWBUnoFragment">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:id="@+id/lyTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:padding="6dp">

      <ImageView
        style="@style/icon_titles"
        android:src="@drawable/ic_local_shipping"/>

      <TextView
        style="@style/titles"
        android:text="RESUMEN"/>

    </LinearLayout>

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/lyBtns"
      android:layout_below="@id/lyTitle">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
          xmlns:cv="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cv:cardBackgroundColor="@color/bgCards"
          cv:cardCornerRadius="6dp"
          cv:cardElevation="3dp"
          cv:cardUseCompatPadding="true"
          cv:contentPadding="6dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_local_shipping"
                android:tint="@color/colorBlue"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="VIAJE"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorBlue"/>
            </LinearLayout>

            <TextView
              android:id="@+id/tvNombre"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:inputType="textMultiLine"
              android:text="Nombre del viaje"
              android:textAppearance="?android:attr/textAppearanceLarge"/>
          </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          xmlns:cv="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cv:cardBackgroundColor="@color/bgCards"
          cv:cardCornerRadius="6dp"
          cv:cardElevation="3dp"
          cv:cardUseCompatPadding="true"
          cv:contentPadding="6dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person"
                android:tint="@color/colorPurple"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="ASIGNADO"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPurple"/>

            </LinearLayout>

            <TextView
              android:id="@+id/tvAsignado"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:inputType="textMultiLine"
              android:text="Nombre del asignado"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          xmlns:cv="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cv:cardBackgroundColor="@color/bgCards"
          cv:cardCornerRadius="6dp"
          cv:cardElevation="3dp"
          cv:cardUseCompatPadding="true"
          cv:contentPadding="6dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_date_range"
                android:tint="@color/colorBlue"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="PROGRAMADO"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorBlue"/>

            </LinearLayout>

            <TextView
              android:id="@+id/tvProgramado"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="14/07/2016"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          xmlns:cv="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cv:cardBackgroundColor="@color/bgCards"
          cv:cardCornerRadius="6dp"
          cv:cardElevation="3dp"
          cv:cardUseCompatPadding="true"
          cv:contentPadding="6dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_place"
                android:tint="@color/colorGreen"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="CLIENTES"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorGreen"/>

            </LinearLayout>

            <TextView
              android:id="@+id/tvClientes"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="6"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          xmlns:cv="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cv:cardBackgroundColor="@color/bgCards"
          cv:cardCornerRadius="6dp"
          cv:cardElevation="3dp"
          cv:cardUseCompatPadding="true"
          cv:contentPadding="6dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_directions"/>

              <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="DISTANCIA"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

            </LinearLayout>

            <TextView
              android:id="@+id/tvKms"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0 KMS"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          xmlns:cv="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cv:cardBackgroundColor="@color/bgCards"
          cv:cardCornerRadius="6dp"
          cv:cardElevation="3dp"
          cv:cardUseCompatPadding="true"
          cv:contentPadding="6dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_access_time"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="TIEMPO"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

            </LinearLayout>

            <TextView
              android:id="@+id/tvTiempo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="00:00 HRS"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

          </LinearLayout>

        </androidx.cardview.widget.CardView>

      </LinearLayout>

    </ScrollView>

    <LinearLayout
      android:id="@+id/lyBtns"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal">

      <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Cancelar"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

      <Button
        android:id="@+id/btnIniciar"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Iniciar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"/>

    </LinearLayout>

  </RelativeLayout>

</FrameLayout>
